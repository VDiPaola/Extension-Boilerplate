{
    "manifest_version": 3,
    "name": "NAME",
    "version": "1.0.0",
    "description": "description",
    "icons":{
        "128": "icon.png",
        "48": "icon.png",
        "16": "icon.png"
    },

    "permissions": [
        "cookies",
        "storage",
        "scripting"
    ],

    "background":{
        "service_worker":"./dist/background.js",
        "type": "module"
    },

    "content_scripts": [{
        "matches":    ["*://*.something.com/*"],
        "js":         ["./dist/content-scripts/main.js"]
    },{
        "css": [ "./styles/main.css","./styles/settings.css" ],
        "matches":    ["*://*.something.com/*"]
     } ],

     "host_permissions": [
        "*://*.something.com/*"
    ]

}